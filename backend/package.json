{
  "name": "aisiri-backend",
  "version": "1.0.0",
  "description": "AIsiri 应用后端API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test MOCK_LLM=true MOCK_DB=true jest --runInBand",
    "test:ai": "node src/AIsiri/tests/run_tests.js",
    "test:task": "node src/AIsiri/tests/test_task_recognition.js",
    "test:speech": "node src/AIvoice/tests/speech-recognition-test.js",
    "test:image": "node src/AIvoice/tests/image-analysis-test.js",
    "fix:indexes": "node scripts/fix_agents_indexes.js"
  },
  "dependencies": {
    "@langchain/community": "^0.3.51",
    "@langchain/core": "^0.3.71",
    "@langchain/openai": "^0.6.7",
    "ali-oss": "^6.23.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.30",
    "mongoose": "^8.17.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "openai": "^5.12.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "cross-env": "^7.0.3",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.test.js",
      "**/src/**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/test/collection.test.js",
      "<rootDir>/test/integration.test.js"
    ]
  }
}
